# --- Copy to .env and adjust as needed ---

# Provider/auth
TF_VAR_region=ap-southeast-2
# Optional assume role (leave empty if not used)
# TF_VAR_assume_role_arn=arn:aws:iam::123456789012:role/TerraformDeployment

# Workload
TF_VAR_name=assure360-app

# Networking
TF_VAR_vpc_cidr=10.10.0.0/16
TF_VAR_public_cidr_a=10.10.0.0/19
TF_VAR_private_app_cidr_a=10.10.32.0/19

# Security
TF_VAR_allowed_http=true
TF_VAR_bastion_allowed_cidr=203.0.113.10/32

# TLS / domain
TF_VAR_domain_name=example.yourdomain.com

# ECS image source (required unless you create the optional ECR repo here)
# Example: 111122223333.dkr.ecr.ap-southeast-2.amazonaws.com/myrepo
TF_VAR_ecr_repo_url=
