# Terraform Variables for Networking Module
# Copy this file to .env and update with your actual values
# Terraform automatically reads TF_VAR_ prefixed environment variables

# Project Configuration
TF_VAR_project_name="YOUR_PROJECT"

# VPC Configuration
TF_VAR_vpc_cidr_block="10.0.0.0/16"

# Availability Zones (leave empty to use all available AZs in the region)
TF_VAR_availability_zones='["us-east-1a", "us-east-1b"]'

# Subnet Configuration
TF_VAR_public_subnet_cidrs='["10.0.1.0/24", "10.0.2.0/24"]'
TF_VAR_private_subnet_cidrs='["10.0.10.0/24", "10.0.20.0/24"]'

# Gateway Configuration
TF_VAR_enable_nat_gateway=true
TF_VAR_enable_vpn_gateway=false

# Flow Logs Configuration
TF_VAR_enable_flow_logs=true
TF_VAR_flow_log_retention_days=30

# AWS Configuration
TF_VAR_aws_profile="your-aws-profile"
TF_VAR_aws_region="us-east-1"

# Tags (optional)
TF_VAR_tags='{"Environment": "production", "Owner": "your-team"}'
